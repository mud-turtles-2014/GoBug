<%= render '/expenses/nav_bar' %>

<% if session[:user_id] && session[:toggle] %>
  <div id="wrapper" class="active">
<% elsif session[:user_id] && !session[:toggle] %>
  <div id="wrapper">
<% else %>
  <div id="wrapper" class="active">
<% end %>

  <div id="sidebar-wrapper">
    <%= render '/users/sidebar' %>
  </div>
  <div id="page-content-wrapper">
    <div class="page-content inset">
        <div id="expenses_grid" >
          <div class="page-title">
          <h2>Build Your Trip</h2>
            <% if @current_user %>
              <a href="#" data-toggle="modal" data-target="#basicModal">New Wishlist</a>
            <% end %>
          </div>
          <%= render 'expense_table' %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
	<div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
            <h4 class="modal-title" id="myModalLabel">New Wishlist</h4>
            </div>
            <div class="modal-body">
                <p>Create new wishlist by entering a name and optional budget below. As you browse, add items to your wishlist. Review at any time by visiting your dashboard.</p>

                <% @wishlist = Wishlist.new %>
	                <%= form_for(@wishlist) do |f| %>
					<%= f.text_field :name, placeholder: "Enter a name" %><br>
					<%= f.number_field :budget, placeholder: "Enter a budget(or 0 if it's not important right now)" %><br>
					<%= f.submit "Create", id: "modal-submit", class:"btn btn-primary" %>
				<% end %>
        </div>
    </div>
  </div>
</div>