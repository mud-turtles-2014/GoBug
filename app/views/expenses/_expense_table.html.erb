<% if @current_user %>
  <%= link_to("Create New Wishlist", new_wishlist_path) %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Cost</th>
      <th>Description</th>
      <th>Category</th>
      <th>Date</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.usd_cost %></td>
        <td><%= link_to expense.description, expense_path(expense) %></td>
        <td><%= expense.category.name %></td>
        <td><%= expense.date %></td>
        <td><%= expense.location.name %></td>
        <% if @current_user %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
