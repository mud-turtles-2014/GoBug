<fieldset>
  <div class="field">
    <%= f.label :location_id %><br>
    <%= f.text_field :location_id, class: "location" %>
  </div>
  <div class="currency">
    <%= f.label :cost %><br>
    <%= f.text_field :cost %>
    <%= f.select :currency_id, Currency.all.collect {|currency| [ currency.code ] }, {:include_blank => "Select Currency"} %>
  <div id="usd"><%= f.text_field :usd_cost, disabled: true %></div>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.select :category_id, Category.all.collect {|category| [ category.name, category.id ] }, {:include_blank => "Select Category"} %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, "Remove Expense" %>

</fieldset>
