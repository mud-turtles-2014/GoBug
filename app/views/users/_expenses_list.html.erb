<% if @trip %>
  <h2 class="page-header"><%= best_in_place @trip, :name %></h2>
    <h5>Visible to: <%= best_in_place @trip, :is_private, :type => :checkbox,collection: {false => "Everyone", true => "Only you"}%> | <%= link_to "Delete Trip", {:controller => :trips, :action => 'destroy', :id => @trip.id }, method: 'delete' %>
    </h5>
    <h5>Budget: <%= best_in_place @trip, :budget, :display_with => :number_to_currency %> | Remaining: <div id='balance-field'><%= number_to_currency(@trip.remaining_budget) %></div>
    </h5>
    <br><br>
  <button id="add-expense">Add Expense</button>
<% elsif wishlist %>
  <h2 class="page-header"><%= best_in_place @wishlist, :name %></h2>
  <h5>Budget: <%= best_in_place @wishlist, :budget, :display_with => :number_to_currency %> | Remaining: <div id='balance-field'><%= number_to_currency(@wishlist.remaining_budget) %></div>
  </h5><br><br>
  <h5><%= link_to "Delete Wishlist", {:controller => :wishlists, :action => 'destroy', :id => @wishlist.id }, method: 'delete' %> | <a href="#" class="converter">Convert to trip</a></h5>

<% end %>

<% if @trip %>
<p><p>
  <div class="row placeholders">
    <%= form_for [@trip, @expense] do |f| %>
    <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= f.select :category_id, Category.all.collect {|category| [ category.name, category.id ] }, {:include_blank => "Select Category"}, class: "category-dropdown" %><br><br>
    <%= f.text_field :location_id, class: "location", placeholder: "Enter a location", id: "location-field" %><br>
    <%= f.text_field :cost, class: "currency", placeholder: "Enter cost" %>
    <%= f.select :currency_id, Currency.all.collect {|currency| [ currency.code, currency.id ]}, {:selected => '150'} %>
    <%= f.text_field :usd_cost, readonly: true, placeholder: "USD", class: "currency" %><br>
    <%= f.text_field :title, placeholder: "Where did you go?", class: 'large_input' %><br>
    <%= f.text_area :description, placeholder: "How was your experience?", class: 'large_input' %><p id="charNum"></p>

    <%= f.submit "Submit" %>
    <p><p>
      <% end %>
    </div>


    <div class="row">
      <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
        <ul class="event-list">
          <% expenses.each do |expense| %>
            <li>
              <time><%= image_tag( category_image(expense.category.name)) %><p>
                <% if expense.cost %>
              <p class="desc", id="usd-cost-field"><%= number_to_currency(expense.usd_cost)%></p>
              <p class="desc"><%= number_with_precision(expense.cost, :precision => 2) %> <%=expense.currency.code %></p>
              <% else %>
              <p class="desc", id="usd-cost-field"><%= best_in_place expense, :cost, :display_with => :number_to_currency %></p>
              <p class="desc"></p>
              <% end %>
            </time>
              <div class="info">
                <div class="delete"> <%= button_to "x", {:controller => :expenses, :action => 'destroy', :id => expense.id }, method: 'delete', remote: true %></div>
                <h5 data-category="<%=expense.category_id %>"  class="title"><%= expense.title%></h5>
                <p class="loc"><%= expense.location.name %></p>
                <p class="desc"><%= best_in_place expense, :description, type: :textarea %></p>

            </div>
            <% end %>
          </li>
        </ul>
      </div>

        <% end %>

<% if wishlist %>
  <div class="row">
      <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
        <ul class="event-list">
          <% expenses.each do |expense| %>
            <li  data-category="<%=expense.category_id %>"  >
              <time><%= image_tag( category_image(expense.category.name)) %><p>
              <p class="desc", id="usd-cost-field"><%= number_to_currency(expense.usd_cost)%></p>
              <p class="desc"><%= number_with_precision(expense.cost, :precision => 2) %> <%=expense.currency.code %></p>
              </time>
              <div class="info">
                <div class="delete"> <%= button_to "x", {:controller => :expenses, :action => 'destroy', :id => expense.id }, method: 'delete', remote: true %></div>
                <h5 class="title"><%= expense.title%></h5>
                <p class="loc"><%= expense.location.name %></p>
                <p class="desc"><%= best_in_place expense, :cost, type: :textarea %></p>
            </div>
            <% end %>
          </li>
        </ul>
      </div>
<% end %>
