<% if @trip %>
<h2 class="page-header"><%= @trip.name %></h2>
<button id="add-expense">Add Expense</button>
<% elsif wishlist %>
<h2>Wishlist for <%= @wishlist.name %></h2>
<% end %>

<% if @trip %>
<p><p>
  <div class="row placeholders">
    <%= form_for [@trip, @expense] do |f| %>
    <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= f.text_field :location_id, class: "location", placeholder: "Enter a location" %><br>
    <%= f.text_field :cost, class: "currency", placeholder: "Enter cost" %>
    <%= f.select :currency_id, Currency.all.collect {|currency| [ currency.code, currency.id ] }, {:include_blank => "Currency"}, class: "currency" %>
    <%= f.text_field :usd_cost, readonly: true, placeholder: "USD", class: "currency" %><br>
    <%= f.hidden_field :description, value: "Enter a description" %>

    <%= f.select :category_id, Category.all.collect {|category| [ category.name, category.id ] }, {:include_blank => "Select Category"} %><br><br>

    <!--     <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d') %> -->
    <%= f.submit "Submit" %>
    <p><p>
      <% end %>
    </div>


    <div class="row">
      <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
        <ul class="event-list">
          <% expenses.each do |expense| %>
            <li>
              <time>
              <%= image_tag( category_image(expense.category.name)) %></time>
              <div class="info">
                <div class="delete"> <%= button_to "x", {:controller => :expenses, :action => 'destroy', :id => expense.id }, method: 'delete', remote: true %></div>
                <h4 class="title"><%= expense.location.name %></h4>
                <p class="desc" id="counttextarea"><%= best_in_place expense, :description, type: :textarea %></p>
                <p class="desc"><%= expense.usd_cost %> USD | <%= expense.cost %> <%=expense.currency.code %></p>
            </div>
            <% end %>
          </li>
        </ul>
      </div>

        <% end %>

<% if wishlist %>
  <div class="row">
      <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
        <ul class="event-list">
          <% expenses.each do |expense| %>
            <li>
              <time>
              <%= image_tag( category_image(expense.category.name)) %></time>
              <div class="info">
                <div class="delete"> <%= button_to "x", {:controller => :expenses, :action => 'destroy', :id => expense.id }, method: 'delete', remote: true %></div>
                <h4 class="title"><%= expense.location.name %></h4>
                <p class="desc" id="counttextarea"><%= expense.description %></p>
                <p class="desc"><%= expense.usd_cost %> USD | <%= expense.cost %> <%=expense.currency.code %></p>
            </div>
            <% end %>
          </li>
        </ul>
      </div>
<% end %>


