<% if @trip %>
  <h2 class="page-header"><%= best_in_place @trip, :name %></h2>
  <h4>Visible to: <%= best_in_place @trip, :is_private, :type => :checkbox,collection: {false => "Everyone", true => "Only you"}%>
  </h4>
    <br><br>
  <button id="add-expense">Add Expense</button>
<% elsif wishlist %>
  <h2 class="page-header"><%= best_in_place @wishlist, :name %></h2>
<% end %>

<% if @trip %>
<p><p>
  <div class="row placeholders">
    <%= form_for [@trip, @expense] do |f| %>
    <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= f.select :category_id, Category.all.collect {|category| [ category.name, category.id ] }, {:include_blank => "Select Category"}, class: "category-dropdown" %><br><br>
    <%= f.text_field :location_id, class: "location", placeholder: "Enter a location", id: "location-field" %><br>
    <%= f.text_field :cost, class: "currency", placeholder: "Enter cost" %>
    <%= f.select :currency_id, Currency.all.collect {|currency| [ currency.code, currency.id ]}, {:selected => '150'} %>
    <%= f.text_field :usd_cost, readonly: true, placeholder: "USD", class: "currency" %><br>
    <%= f.text_field :title, placeholder: "Where did you go?", class: 'large_input' %><br>
    <%= f.text_area :description, placeholder: "How was your experience?", class: 'large_input' %><p id="charNum"></p>

    <%= f.submit "Submit" %>
    <p><p>
      <% end %>
    </div>


    <div class="row">
      <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
        <ul class="event-list">
          <% expenses.each do |expense| %>
            <li>
              <time><%= image_tag( category_image(expense.category.name)) %><p>
              <p class="desc"><%= expense.usd_cost %> USD </p>
              <p class="desc"><%= expense.cost %> <%=expense.currency.code %></p>
            </time>
              <div class="info">
                <div class="delete"> <%= button_to "x", {:controller => :expenses, :action => 'destroy', :id => expense.id }, method: 'delete', remote: true %></div>
                <h5 class="title"><%= expense.title%></h5>
                <p class="loc"><%= expense.location.name %></p>
                <p class="desc"><%= best_in_place expense, :description, type: :textarea %></p>

            </div>
            <% end %>
          </li>
        </ul>
      </div>

        <% end %>

<% if wishlist %>
  <div class="row">
      <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
        <ul class="event-list">
          <% expenses.each do |expense| %>
            <li>
              <time>
              <%= image_tag( category_image(expense.category.name)) %></time>
              <div class="info">
                <div class="delete"> <%= button_to "x", {:controller => :expenses, :action => 'destroy', :id => expense.id }, method: 'delete', remote: true %></div>
                <h4 class="title"><%= expense.location.name %></h4>
                <p class="desc" id="counttextarea"><%= expense.description %></p>
                <p class="desc"><%= expense.usd_cost %> USD | <%= expense.cost %> <%=expense.currency.code %></p>
            </div>
            <% end %>
          </li>
        </ul>
      </div>
<% end %>


